                        <input type="email" name="email" id="email" class = "input100" placeholder="Email" />
                        <span class="focus-input100"></span>
                    </div>

                    <div class="wrap-input100 validate-input m-b-16 " data-validate="Please enter password" >
                        <input type="password" name="password" id="pass" class = "input100" placeholder="password" />
                        <span class="focus-input100"></span>
                    </div>

                    <div class="text-right p-t-13 p-b-23">
                        <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                        <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="txt2">Terms of service</a></label>
                    </div>

                   <div class="container-login100-form-btn ">
						<button class="login100-form-btn">
							Create new account
						</button>
					</div>
                </form>
                
                <div class="flex-col-c p-t-130 p-b-40">
